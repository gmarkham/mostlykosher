/* Global Settings */
body {
   background-color:#eee;
}  
@font-face {
   font-family:kosher;
   src: url(<%= asset_path 'stencilstd.otf' %>);
}
@font-face {
   font-family:railway;
   src: url(<%= asset_path 'raleway-regular.otf' %>);
}
@font-face {
   font-family:railway;
   src: url(<%= asset_path 'raleway-light.otf' %>);
   font-weight:lighter;
}
.kosher {
   font-family:kosher;
}
/* Nav Bar */
.sticky-nav {
   position: fixed;
   width: 110%;
   top: 0;
   z-index: 30;
   border-top: 0;
   left: 0;
}
.top {
   min-height:50px;
   background:#111; 
   width:100%;
   text-align:center;
   font-family: 'Lato', sans-serif;
   font-size:1em;
}
.top ul a {
   color:#fff;
   font-weight:300;
}
.top ul a:hover {
   background-color:#333;
   font-weight:500;
}
.top ul a i:hover {
   font-size:1.15em;
}
nav {
   display:block;
   overflow:auto;
}
.nav-container {
   position:relative;
   margin: 0 auto;
   width:34%;
}
.nav li,
.social-media li{
    display:inline;
}
.nav a,
.social-media a{
    display:inline-block;
    padding:10px;
}
/* Word to Bubbe */
.top-new, .faded-background {
   width:100%;
   height:670px;
   overflow:hidden;
   position:relative;
}
.faded-background {
   position:absolute;
   width:100%;
}
.top-new h1 {
   font-size:3.68em;
   margin-bottom:0px;
   margin-top:0.5em;
}
.top-new h4 {
   margin-top:0px;
   font-size:1.68em;
   font-family:Verdana;
}
.top-new h1, h4 {
   color:#fff;
}
.transparent-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
  background-color:rgba(150, 60, 20, 0.2);
}
.top-new img {
   display:inline;
   width:110%;
   height:auto;
   position:relative;
   left:-50px;
   top:-25px;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
}
.background-image-container,
.text-overlay,
.news-media {
   position:absolute;
   text-align:center;
   width:100%;
}
.text-overlay,
.news-media {
   z-index:10;
}
.left-center {
    float: left;
    position: relative;
    left: 35%;
    text-align:left;
}
.news-media {
   top:30%;
}
.news-media .content a, 
.news-media .content h2, 
.news-media .content ul li a {
   font-family:railway;
   color:#fff;
}
.news-media .content h2 {
   font-size:2.5em;
}
.news-media .content a {
   font-weight:lighter;
}
.news-media ul {
   padding-left:0px;
   font-size:2.75em;
}
.news-media ul li{
   opacity:0.75;
}
.news-media ul li:hover{
   opacity:1;
}
/* Whats Nu */
.new, .new-content {
   width:100%;
   overflow:hidden;
   position:relative;
}
.seperator {
   height:115px;
   color:#fff;
   background:#f36b10 url(<%= asset_path 'kosher-logo-white.png' %>) no-repeat 76em -20em;
}
.new .seperator h1 {
   margin:0;
   margin-left:7.5%;
   font-family:railway;
   font-weight:lighter;
   font-size:8em;
   position:absolute;
   bottom:0;
   line-height:0.71em;
}
.new-content .main {
   min-height:570px;
   height:auto;
   background:#fff;
   color:#000;
   text-align:justify;
   padding: 2.8% 16.9%;
}
.info-card {
   border: 2px solid #f36b10;
   color:#f36b10;
   display:inline-block;
   height:385px;
   width:330px;
   margin: 10px 0px;
   overflow:hidden;
   padding:20px;
   position:relative;
}
.info-card h1 {
   display:inline-block;
   margin:0;
}
.info-card span.sign {
   font-size: 3em;
   float: right;
   position: relative;
   top: -12px;
}
.stretch {
   width: 100%;
   display: inline-block;
   font-size: 0;
   line-height: 0;
}
.info-card .content abbr {
   cursor:pointer;
   border: 0;
   text-align:left;
   float:right;
   position:relative;
   font-weight:500;
}
.info-card .content h4 {
   clear:right; 
   color:#f36b10;
   line-height:150%;
}
.info-card .content .review h4,
.info-card .content .filler h4 {
   text-align:center;
}
.info-card .header {
   margin-bottom:25px;
}
.info-card .post {
   text-align:justify;
}
.info-card .post span {
   color:#111;
}
.info-card .post span a {
   color:#f36b10;
}
.info-card .footer {
   width:100%;
   height:60px;
   background-color:#f36b10;
   position: absolute; bottom: 0; left: 0; 
   text-align:center;
}
.info-card .footer a {
   color:#fff;
   margin:0 auto;
   position:relative;
   top: 25%;
   font-size:1.5em;
}
.new-content .press {
   font-size:2em;
}
.new-content .press a {
   color:#f36b10;
}
/* Newsletter Sign up */
.form { 
   height:720px;
   background: #faf4f2 url(<%= asset_path 'hebrew-form.png' %>) no-repeat 0px -380px;
}
.form form {
   padding-top:185px;
}
.form-field form span {
   display:inline-block;
   font-size:2.5em;
   color:#9b200c;
   width:100%;
}
.input-fields {
   margin:0 auto;
   height:65px;
}
.form form input[type="text"],
.form form button[type="submit"] {
   position:absolute;
   bottom:0;
}
.form form input[type="text"] {
   width:70%;
   height: 60px;
   border: 1px solid #111;
   font-size: 2em;
   padding:2%;
}
.form form input[type="text"]:focus {
   outline:none;
}
.form form button[type="submit"] {
   width: 25%;
   height:60px;
   background-color: #9b200c;
   border:0;
   color:#fff;
   right:0;
   font-size:1.5em;
}
.form .quote {
   clear:both;
   text-align:center;
   color:#111;
   height:100px;
   margin:50px 20%;
   background:rgba(255,255,255,0.8);
   position:relative;
}
.form .quote span { 
   font-size: 2em;
   position: relative;
   top: 28%;
}
.form-field {
  margin:0 20%;
  position:relative;
}

.form .quote span.quotation-mark {
   color:#9b200c;
   font-size:12em;
   position:absolute;
}
.form .quote span.upsidedown {
   left: -5px;
   top: -80px;
}
.form .quote span.rightsideup {
   right:-5px;
   top:14px;
}
/* Media Query Overrides */
@media(min-width:1770px){
   .container {
      width:1770px;
   }
}
@media (min-width:1460px) and (max-width:1769px) {
   .container {
      width:1460px;
   }
   .left-center {
      left:34.5%;
   }
}
@media (min-width:1200px) and (max-width:1459px) {
   .container {
      width:1200px;
   }
   .left-center {
      left:30%;
   }
}
@media (min-width:1460px) and (max-width:1769px) {
  .nav-container {
     width:36%;
  }
  .sticky-nav .nav-container {
     width:40%;
  }
}
@media (min-width:1200px) and (max-width:1460px) {
   .nav-container {
      width:46%;
   }
}
@media (min-width:1200px) and (max-width:1360px) {
   .sticky-nav .nav-container {
      width:42%;
   }
}
@media (min-width:862px) and (max-width:1199px) {
   .sticky-nav .nav-container {
      width:55%;
   }
   .left-center {
      left:26%;
   }
}
@media (min-width:762px) and (max-width:861px) {
   .sticky-nav .nav-container {
      width:62%;
   }
}
@media (min-width:992px) and (max-width:1199px) {
   .nav-container {
      width:55%;
   }
}
@media (max-width:991px) {
   .nav-container {
      width:70%;
   }
}
@media (min-width:660px) and (max-width:986px){
   .top-new img {
      width:160%;
      left:-205px;
   }
}
@media(max-width:659px) {
   .top-new img {
      height:100%;
      width:auto;
      left:-495px;
   }
}
@media(max-width:992px) {
   .left-center {
      float:none;
      position:initial;
      text-align:center;
   }
}
@media(max-width:992px) {
   .new .seperator h1 {
      font-size:6em;
   }
}
@media(max-width:1200px) {
  .new-content .main {
      text-align:center;
   }
}
