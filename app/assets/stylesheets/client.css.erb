/* Global Settings */
@font-face {
   font-family:kosher;
   src: url('stencilstd.otf');
}
@font-face {
   font-family:railway;
   src: url('raleway-regular.otf');
}
@font-face {
   font-family:railway;
   src: url('raleway-light.otf');
   font-weight:lighter;
}
.kosher {
   font-family:kosher;
}
/* Nav Bar */
.sticky-nav {
   position: fixed;
   width: 110%;
   top: 0;
   z-index: 30;
   border-top: 0;
   left: 0;
}
.top {
   min-height:50px;
   background:#333;
}
.top ul a {
   color:#fff;
   font-weight:300;
}
.top ul a:hover {
   background-color:#333;
   font-weight:500;
}
.top ul a i:hover {
   font-size:1.15em;
}
.top {
   text-align:center;
}
nav {
   display:block;
   overflow:auto;
}
.nav{
   margin: 0 25%;
}
.nav li,
.social-media li{
    display:inline;
}
.nav a,
.social-media a{
    display:inline-block;
    padding:10px;
}
/* Word to Bubbe */
.top-new, .faded-background {
   width:100%;
   height:670px;
   overflow:hidden;
   position:relative;
}
.faded-background {
   position:absolute;
   width:100%;
}
.top-new h1 {
   font-size:3.68em;
   margin-bottom:0px;
   margin-top:0.5em;
}
.top-new h4 {
   margin-top:0px;
   font-size:1.68em;
   font-family:Verdana;
}
.top-new h1, h4 {
   color:#fff;
}
.transparent-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
  background-color:rgba(150, 60, 20, 0.2);
}
.top-new img {
   display:inline;
   position:relative;
   left:-240px;
   top:-120px;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
}
.background-image-container,
.text-overlay,
.news-media {
   position:absolute;
   text-align:center;
   width:100%;
}
.text-overlay,
.news-media {
   z-index:10;
}
.left-center {
    float: left;
    position: relative;
    left: 30%;
    text-align:left;
}
@media(max-width:768px) {
   .left-center {
      float:none;
      position:initial;
      text-align:center;
   }
}
.news-media {
   top:30%;
}
.news-media .content a, 
.news-media .content h2, 
.news-media .content ul li a {
   font-family:railway;
   color:#fff;
}
.news-media .content h2 {
   font-size:2.5em;
}
.news-media .content a {
   font-weight:lighter;
}
.news-media ul {
   padding-left:0px;
   font-size:2.75em;
}
.news-media ul li{
   opacity:0.75;
}
.news-media ul li:hover{
   opacity:1;
}
/* Whats Nu */
.new {
   width:100%;
   overflow:hidden;
   position:relative;
}
.new .seperator {
   height:150px;
   color:#fff;
   background: #f36b10;
}
.new .seperator h1 {
   margin:0;
   font-family:railway;
   font-weight:lighter;
   font-size:8em;
   position:absolute;
   bottom:0;
   line-height:0.71em;
}
